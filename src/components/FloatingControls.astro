---
interface Props {
  prevChapter: string | number | null;
  nextChapter: string | number | null;
  audioSrc: string | null;
  bookSlug: string;
  lang: string;
  prevUrl?: string;
  nextUrl?: string;
}

const { prevChapter, nextChapter, audioSrc, bookSlug, lang, prevUrl, nextUrl } = Astro.props;
---

<div class="floating-wrapper">
  <div class="controls-container">
    <a 
      href={prevUrl || (prevChapter ? `/${lang}/${bookSlug}/${prevChapter}` : '#')} 
      class={`nav-btn prev ${(!prevChapter && !prevUrl) ? 'disabled' : ''}`}
      aria-label="Previous Chapter"
    >
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M15 18l-6-6 6-6"/>
      </svg>
      <span class="nav-text">Prev</span>
    </a>

    <div class="audio-section">
      {audioSrc ? (
        <audio controls>
          <source src={audioSrc} type="audio/mpeg" />
          Your browser does not support the audio element.
        </audio>
      ) : (
        <div class="audio-placeholder">
          <span class="coming-soon">Audio Coming Soon</span>
        </div>
      )}
    </div>

    <a 
      href={nextUrl || (nextChapter ? `/${lang}/${bookSlug}/${nextChapter}` : '#')} 
      class={`nav-btn next ${(!nextChapter && !nextUrl) ? 'disabled' : ''}`}
      aria-label="Next Chapter"
    >
      <span class="nav-text">Next</span>
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M9 18l6-6-6-6"/>
      </svg>
    </a>
  </div>
</div>

<style>
  .floating-wrapper {
    position: fixed;
    bottom: 2rem;
    left: 280px; /* Sidebar width */
    right: 0;
    display: flex;
    justify-content: center;
    pointer-events: none;
    z-index: 100;
    padding: 0 1rem;
  }

  .controls-container {
    pointer-events: auto;
    background: var(--theme-text);
    color: var(--theme-bg);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid var(--theme-border);
    border-radius: 16px;
    padding: 0.75rem 1.5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1.5rem;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    width: 100%;
    max-width: 700px;
    transition: background-color 0.3s ease, border-color 0.3s ease;
  }

  .nav-btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--theme-bg);
    text-decoration: none;
    font-family: 'Cinzel', serif;
    font-weight: 700;
    font-size: 0.9rem;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    transition: all 0.2s ease;
    white-space: nowrap;
  }

  .nav-btn:hover:not(.disabled) {
    background: var(--theme-bg);
    color: var(--theme-text);
  }

  .nav-btn.disabled {
    opacity: 0.3;
    pointer-events: none;
    cursor: default;
  }

  .nav-btn svg {
    width: 20px;
    height: 20px;
  }

  .audio-section {
    flex-grow: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    min-width: 0;
  }

  audio {
    width: 100%;
    height: 36px;
    border-radius: 18px;
    filter: invert(1); /* Invert controls to be white on the dark background */
  }
  
  /* Reset filter in dark mode because the container becomes light, so we want dark controls */
  :global([data-theme="dark"]) audio {
    filter: none;
  }
  
  /* Customizing audio player colors to match theme roughly */
  audio::-webkit-media-controls-enclosure {
    background-color: transparent;
  }

  .audio-placeholder {
    width: 100%;
    height: 36px;
    background: var(--theme-bg);
    opacity: 0.1;
    border-radius: 18px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px dashed var(--theme-border);
  }

  .coming-soon {
    font-family: 'Lato', sans-serif;
    font-size: 0.85rem;
    color: var(--theme-bg);
    opacity: 0.8;

    font-style: italic;
  }

  @media (max-width: 768px) {
    .floating-wrapper {
      left: 0;
      bottom: 1rem;
    }
    
    .nav-text {
      display: none;
    }
    
    .controls-container {
      padding: 0.75rem;
      gap: 0.75rem;
    }
  }
</style>
