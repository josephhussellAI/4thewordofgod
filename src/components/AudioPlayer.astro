---
interface Props {
  src: string | null;
}

const { src } = Astro.props;
---

{src && (
  <div class="audio-player">
    <audio controls>
      <source src={src} type="audio/mpeg" />
      Your browser does not support the audio element.
    </audio>
  </div>
)}

<style>
  .audio-player {
    position: sticky;
    top: 0;
    background: var(--theme-text, #1a1510);
    color: var(--theme-bg, #f7f5f0);
    padding: 1rem 0;
    z-index: 10;
    border-bottom: 1px solid var(--theme-border, #333);
  }
  audio {
    width: 100%;
  }
</style>
